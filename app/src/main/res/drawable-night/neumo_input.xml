<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark shadow (top-left) for inset effect -->
    <item android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/neumo_shadow_dark_dark" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Light shadow (bottom-right) for inset effect -->
    <item android:left="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/neumo_shadow_light_dark" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Input surface -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/neumo_surface_pressed_dark" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list> 