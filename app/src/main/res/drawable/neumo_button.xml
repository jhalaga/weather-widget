<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- Light shadow (bottom-right) -->
            <item android:left="1dp" android:top="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/neumo_shadow_light" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            
            <!-- Dark shadow (top-left) -->
            <item android:right="1dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/neumo_shadow_dark" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            
            <!-- Main surface (pressed) -->
            <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/neumo_surface_pressed" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <item>
        <layer-list>
            <!-- Dark shadow (bottom-right) -->
            <item android:left="2dp" android:top="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/neumo_shadow_dark" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            
            <!-- Light shadow (top-left) -->
            <item android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/neumo_shadow_light" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            
            <!-- Main surface -->
            <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/neumo_surface" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector> 