<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherWidget" parent="Theme.Material3.DayNight">
        <!-- Neumorphic colors -->
        <item name="colorPrimary">@color/neumo_accent</item>
        <item name="colorPrimaryVariant">@color/neumo_accent</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/neumo_accent_light</item>
        <item name="colorSecondaryVariant">@color/neumo_accent</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <item name="colorSurface">@color/neumo_surface</item>
        <item name="colorOnSurface">@color/neumo_text_primary</item>
        <item name="colorOnSurfaceVariant">@color/neumo_text_secondary</item>
        
        <item name="android:colorBackground">@color/neumo_background</item>
        <item name="colorOnBackground">@color/neumo_text_primary</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/neumo_background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor" tools:targetApi="l">@color/neumo_background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">true</item>
    </style>
</resources>